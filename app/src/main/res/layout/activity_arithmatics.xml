<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/sql_get_javacode"
        android:layout_width="161dp"
        android:layout_height="151dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="572dp"
        android:onClick="getcode"
        android:tag="java"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/java_button11" />

    <ImageView
        android:id="@+id/sql_get_xml"
        android:layout_width="173dp"
        android:layout_height="142dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="572dp"
        android:onClick="getcode"
        android:tag="xml"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/xml_button22" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="572dp"
        android:fontFamily="monospace"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2"
        android:text="Get Java Code"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="572dp"
        android:fontFamily="monospace"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2"
        android:text="Get XML Code"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardBackgroundColor="#7EC6FF"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingStart="30dp"
            android:paddingTop="40dp"
            android:text="Enter 1st Number"
            android:textColor="#040404"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingStart="30dp"
            android:paddingTop="120dp"
            android:text="Enter 2nd Number"
            android:textColor="#040404"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/arith_num1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:inputType="number"
            android:textColor="#010101"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/arith_num2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="100dp"
            android:fontFamily="casual"
            android:inputType="number"
            android:textColor="#030303"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="200dp"
            android:fontFamily="casual"
            android:onClick="operation"
            android:background="@drawable/button"
            android:tag="sub"
            android:text="SUBTRACT"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="200dp"
            android:elevation="20dp"
            android:fontFamily="casual"
            android:onClick="operation"
            android:tag="add"
            android:background="@drawable/button"
            android:text="ADD"
            android:textStyle="bold"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            tools:text="ADD" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="300dp"
            android:fontFamily="casual"
            android:onClick="operation"
            android:tag="div"
            android:background="@drawable/button"
            android:text="DIVIDE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="300dp"
            android:fontFamily="casual"
            android:onClick="operation"
            android:tag="mul"
            android:background="@drawable/button"
            android:text="MULTIPLY"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="400dp"
            android:fontFamily="casual"
            android:text="ANSWER :"
            android:textColor="#040404"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/arith_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="400dp"
            android:fontFamily="casual"
            android:text="_______ "
            android:textColor="#040404"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>