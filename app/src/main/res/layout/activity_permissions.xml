<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java_codes.Permissions">

    <ImageView
        android:id="@+id/sql_get_javacode"
        android:layout_width="161dp"
        android:layout_height="151dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="572dp"
        android:onClick="getcode"
        android:tag="java"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/java_button11" />

    <ImageView
        android:id="@+id/sql_get_xml"
        android:layout_width="173dp"
        android:layout_height="142dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="572dp"
        android:onClick="getcode"
        android:tag="xml"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/xml_button22" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="572dp"
        android:fontFamily="monospace"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2"
        android:text="Get Java Code"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="572dp"
        android:fontFamily="monospace"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2"
        android:text="Get XML Code"
        android:textColor="#03A9F4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardBackgroundColor="#7EC6FF"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">


        <Button
            android:id="@+id/storage"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Storage"
            android:background="@drawable/button"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>

        <!--Button to request camera permission-->
        <Button
            android:id="@+id/camera"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Camera"

            android:background="@drawable/button"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/location"
            android:layout_width="300dp"
            android:layout_height="40dp"

            android:background="@drawable/button"
            android:text="Location"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/contacts"
            android:layout_width="300dp"
            android:layout_height="40dp"

            android:background="@drawable/button"
            android:text="Contacts"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/record"
            android:layout_width="300dp"
            android:layout_height="40dp"

            android:background="@drawable/button"
            android:text="Recording"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

